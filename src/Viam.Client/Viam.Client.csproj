<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.1</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<TrimmerSingleWarn>false</TrimmerSingleWarn>
		<Platforms>AnyCPU;x64</Platforms>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="runtimes\win-x64\native\libviam_rust_utils-windows_x86_64.dll" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Viam.Core\Viam.Core.csproj" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="ConfigureAwait.Fody" Version="3.3.2">
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
		<PackageReference Include="Fody" Version="6.9.2">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="System.Memory" Version="4.6.3" />
	</ItemGroup>
	<PropertyGroup>
		<WeaverConfiguration>
			<Weavers>
				<ConfigureAwait />
				<MethodBoundaryAspect />
			</Weavers>
		</WeaverConfiguration>
	</PropertyGroup>
	<PropertyGroup>
		<PackageId>Viam.Client</PackageId>
		<Version>0.0.0-dev</Version>
		<Authors>TheGreatCO</Authors>
		<Description>Viam Client Library</Description>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<!-- optional -->
	</PropertyGroup>
	<ItemGroup>
		<NativeLibrary Include="runtimes\win-x64\native\libviam_rust_utils-windows_x86_64.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</NativeLibrary>
		<NativeLibrary Include="runtimes\linux-x64\native\libviam_rpc_client.so">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</NativeLibrary>
		<NativeLibrary Include="runtimes\osx-arm64\native\libviam_rpc_client.dylib">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</NativeLibrary>
	</ItemGroup>
	<ItemGroup>
		<None Include="runtimes\**" CopyToOutputDirectory="PreserveNewest" />
	</ItemGroup>
</Project>
